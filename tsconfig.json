{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "target": "ES2020", // Node.js 14
    "lib": ["ES2020"],
    "declaration": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true
  }
}
